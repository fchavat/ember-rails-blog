<div class='container'>
  <div class="card text-center mx-auto mt-5" style="width: 18rem;">
    <div class="card-header">
      Login
    </div>
    <div class="card-body">
      <form {{action 'authenticate' on='submit'}}>
        <div class='form-group'>
          <label for="username">Username</label>
          {{input id='username' class='form-control' placeholder='Enter Login' value=username}}
        </div>
        <div class='form-group'>
          <label for="password">Password</label>
          {{input id='password' class='form-control' placeholder='Enter Password' type='password' value=password}}
        </div>
        <button type="submit" class="btn btn-success">Login</button>
      </form>
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
    </div>
    <div class='card-footer' id='loginFormRegisterSpan'>
      Don't have an account? {{#link-to 'register'}}Register{{/link-to}}
    </div>
  </div>
</div>
